{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    // "height": 30, // Waybar height (to be removed for auto height)
    "margin": "20 20 0 20",
    // "width": 1280, // Waybar width
    // Choose the order of the modules
    "modules-left": ["hyprland/workspaces", "hyprland/language", "hyprland/submap"],
    "modules-center": ["clock", "custom/weather"],
    "modules-right": ["pulseaudio", "bluetooth", "network", "custom/mem", "cpu",   "tray", "custom/power"],


    //***************************
    //*  Modules configuration  *
    //***************************

    "sway/workspaces": {
        "disable-scroll": true,
        "persistent_workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
        },
    },

    "hyprland/language": {
        "format": "{}  ",
        "format-en": "en",
        "format-ru": "ru",
    },

		"custom/power": {
       "format": "󰐥",
			 "on-click": "wlogout",
       "tooltip": false,
		},

    "keyboard-state": {
        //"numlock": true,
        "capslock": true,
        "format": "{name} {icon} ",
        "format-icons": {
            "locked": " ",
            "unlocked": ""
        },
    },


    "hyprland/submap": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "clock": {
        "timezone": "Europe/Berlin",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%a, %d %b, %H:%M}",
				"calendar": {
					"on-scroll": 1,
          "on-click-right": "mode",
					"format": {
            "today": "<span color='#D24545'><b>{}</b></span>"
					}
				}

    },

    "custom/weather": {
        "format": "{}",
        "tooltip": true,
        "interval": 1800,
        "exec": "$HOME/.config/waybar/scripts/wttr.sh",
        "return-type": "json"
    },

    "pulseaudio": {
        "reverse-scrolling": 1,
        "format": "{icon}  {format_source}",
        "format-muted": "   {format_source}",
        "format-source": "",
        "format-source-muted": " ",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol",
				"on-click-middle": "pactl set-sink-mute 0 toggle",
				"on-click-right": "pactl set-source-mute 0 toggle",
				"tooltip-format": "{volume}%, {desc}"
    },

		"bluetooth": {
			"format": "",
			"format-disabled": "󰂲",
			"format-off": "󰂲",
			"on-click": "blueman-manager",
			"tooltip-format": "{device_enumerate}",
"tooltip-format-enumerate-connected": "• {device_alias}"
		},

		"network": {
			"format": "{ifname}",
      "format-wifi": "",
			"format-ethernet": "",
			"format-disconnected": "󰖪",
			"format-linked": "linked",
			"tooltip-format-wifi": "{essid} - {signalStrength}",
			"on-click": "",
		},

    "custom/mem": {
        "format": "{} ",
        "interval": 3,
        "exec": "free -h | awk '/Mem:/{printf $3}'",
        "tooltip": false,
    },


    "cpu": {
        "format": "{usage}% ",
    },

    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C {icon}",
        "format-icons": ["", "", "", "", ""],
        "tooltip": false,
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{percent}% {icon}",
        "format-icons": ["","","","", "", "", ""],
        "min-length": 7,
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% ",
        "format-plugged": "{capacity}% ",
        "format-alt": "{time} {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", "", ""],
	"on-update": "$HOME/.config/waybar/scripts/check_battery.sh",
    },

    "tray": {
        "icon-size": 16,
        "spacing": 5
    },
}
